    /* 上传按钮控件---start */
    .updateFile
        width: 108px;
        height: 108px;
        position: relative;  
        padding: 4px;
        box-sizing: content-box;
        
        .addIcon
            width: 0;
            height: 0;
            outline-style: none;
            border: 1.008rem solid transparent;
            border-radius: 50%;
            box-shadow: 0px 0px 0 4px #fff;
            padding: 0;
            box-sizing: border-box;
            position: absolute;
            top: 4px;
            left: 4px;
            text-indent: -1.29rem;
        
            &:before
                position: fixed;
                width: 1.008rem;
                height: 4px;
                background: #fff;
                border-radius: 2px;
                content: '';
                margin-left: .8rem;
        
            &:after
                position: fixed;
                width: 1.008rem;
                height: 4px;
                background: #fff;
                border-radius: 2px;
                content: '';
                margin-left: -0.504rem;
                transform: rotate(90deg);
        /* 上传按钮控件---end */        